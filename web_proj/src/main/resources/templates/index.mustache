<!--    <form action="/test" method="post">-->
<!--        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />-->
<!--        <button style="color: black" class="btn btn-outline-light my-2 my-sm-0" type="submit">Test</button>-->
<!--    </form>-->

    <h2 align="center">Каталог товаров</h2>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Название</th>
            <th scope="col">Катерория</th>
            <th scope="col">Количество</th>
            <th scope="col">Ингредиенты</th>
            <th scope="col">Цена</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>

        {{#products}}
        <tr>
            <td>{{name}}</td>
            <td>{{prodType.russianValue}}</td>
            <td>{{quantity}} {{weightType.russianValue}}</td>
            <td>
                <select class="custom-select">
                    {{#ingredients}}
                    <option>{{name}}</option>
                    {{/ingredients}}

                </select>
            </td>
            <td>{{price.price}}</td>
            <td><button type="button" class="btn btn-success">В корзину</button></td>
        </tr>
        {{/products}}

        </tbody>
    </table>

    <!-- body end -->
</div>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>

</html>
